<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".SplashScreenActivity"

   >

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_margin="40dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/pic2"
        android:layout_centerVertical="true"
        android:src="@drawable/logooo"/>

    <com.eyalbira.loadingdots.LoadingDots
        android:layout_width="100dp"
        android:layout_below="@id/pic2"
        app:LoadingDots_dots_color="@android:color/white"
        app:LoadingDots_dots_count="5"
        app:LoadingDots_dots_size="10dp"
        app:LoadingDots_dots_space="10dp"
        android:id="@+id/dots"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:layout_height="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="100dp"
        android:textSize="16dp"
        android:id="@+id/text"
        android:layout_marginBottom="24dp"
        android:textColor="@color/colorText"
        android:fontFamily="@font/meriendaregular"
        android:text="#MadeWithLove"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginBottom="24dp"
        android:src="@drawable/ic_like"
        android:layout_toRightOf="@id/text"
       android:layout_alignParentBottom="true"
        android:id="@+id/img"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"

        android:layout_alignParentBottom="true"
        android:textSize="20dp"
        android:layout_marginTop="4dp"
        android:id="@+id/text2"
        android:layout_toRightOf="@id/img"
        android:textColor="@color/colorText"
        android:layout_marginBottom="24dp"
        android:fontFamily="@font/oreganoregular"
        android:text="Kohli.Studio"/>




</RelativeLayout>